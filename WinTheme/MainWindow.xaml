<Window x:Class="WinTheme.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="WinTheme" Height="200" Width="200">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock>Theme</TextBlock>
        
        <RadioButton Name="LightButton" Click="ChangeTheme">Light</RadioButton>
        <RadioButton Name="DarkButton" Click="ChangeTheme">Dark</RadioButton>
        
        <CheckBox Name="TransparencyButton" Click="ChangeTransparency">Transparency</CheckBox>
    </StackPanel>
</Window>
